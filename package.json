{
  "name": "esm-monaco",
  "description": "A Code Editor powered by monaco-editor-core with radical ESM support",
  "version": "0.0.0-beta.40",
  "type": "module",
  "module": "dist/index.js",
  "types": "types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./types/index.d.ts"
    },
    "./editor-core": {
      "import": "./dist/editor-core.js",
      "types": "./types/monaco.d.ts"
    },
    "./editor-worker": {
      "import": "./dist/editor-worker.js"
    },
    "./cache": {
      "import": "./dist/cache.js",
      "types": "./types/cache.d.ts"
    },
    "./import-map": {
      "import": "./dist/import-map.js",
      "types": "./types/import-map.d.ts"
    },
    "./vfs": {
      "import": "./dist/vfs.js",
      "types": "./types/vfs.d.ts"
    },
    "./ssr": {
      "workerd": "./dist/ssr/workerd.js",
      "import": "./dist/ssr/index.js",
      "types": "./types/ssr.d.ts"
    },
    "./lsp/*": {
      "import": "./dist/lsp/*.js"
    }
  },
  "scripts": {
    "prepublishOnly": "deno run -A --no-lock scripts/build.ts",
    "prepare": "deno run -A --no-lock scripts/patch.ts",
    "update-language-configurations": "deno run -A --no-lock scripts/update-language-configurations.ts",
    "dev": "deno run -A --no-lock scripts/dev.ts",
    "fmt": "dprint fmt"
  },
  "files": [
    "dist/",
    "types/"
  ],
  "browser": {
    "process": false,
    "buffer": false
  },
  "sideEffects": false,
  "devDependencies": {
    "@shikijs/core": "1.27.2",
    "@shikijs/engine-oniguruma": "1.27.2",
    "monaco-editor-core": "0.52.2",
    "tm-grammars": "1.22.7",
    "tm-themes": "1.9.8",
    "typescript": "5.7.3",
    "vscode-css-languageservice": "6.3.2",
    "vscode-html-languageservice": "5.3.1",
    "vscode-json-languageservice": "5.4.2",
    "vscode-languageserver-textdocument": "1.0.12",
    "vscode-languageserver-types": "3.17.5"
  },
  "peerDependencies": {
    "typescript": ">= 5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/esm-dev/esm-monaco.git"
  },
  "license": "MIT"
}
