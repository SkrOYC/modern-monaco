{
  "name": "esm-monaco",
  "description": "An Monaco Editor build with esm.sh",
  "version": "0.0.0-beta.1",
  "type": "module",
  "module": "dist/editor.js",
  "types": "types/editor.d.ts",
  "exports": {
    ".": {
      "import": "./dist/editor.js",
      "types": "./types/editor.d.ts"
    }
  },
  "scripts": {
    "prepublishOnly": "deno run -A build.ts",
    "fmt": "deno fmt -c ./.vscode/deno.json src/",
    "dev": "deno run -A dev.ts"
  },
  "files": [
    "dist/",
    "types/"
  ],
  "browser": {
    "process": false,
    "buffer": false
  },
  "sideEffects": false,
  "devDependencies": {
    "@shikijs/core": "1.1.5",
    "@shikijs/monaco": "1.1.5",
    "esbuild": "0.20.1",
    "monaco-editor-core": "0.46.0",
    "tm-grammars": "1.4.0",
    "tm-themes": "1.1.3",
    "typescript": "5.3.3",
    "vscode-css-languageservice": "6.2.12",
    "vscode-html-languageservice": "5.1.2",
    "vscode-json-languageservice": "5.3.9",
    "vscode-languageserver-types": "3.17.5"
  },
  "peerDependencies": {
    "typescript": ">= 5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/esm-dev/esm.sh.git"
  },
  "license": "MIT"
}
