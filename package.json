{
  "name": "esm-monaco",
  "description": "An Monaco Editor build with esm.sh",
  "version": "0.0.0-beta.12",
  "type": "module",
  "module": "dist/index.js",
  "types": "types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./types/index.d.ts"
    },
    "./vfs": {
      "import": "./dist/vfs.js",
      "types": "./types/vfs.d.ts"
    },
    "./import-map": {
      "import": "./dist/import-map.js",
      "types": "./types/import-map.d.ts"
    },
    "./editor-core": {
      "import": "./dist/editor-core.js",
      "types": "./types/monaco.d.ts"
    },
    "./editor-worker": {
      "import": "./dist/editor-worker.js"
    },
    "./lsp/*": {
      "import": "./dist/lsp/*.js"
    }
  },
  "scripts": {
    "postinstall": "mkdir -p .vscode && echo '{\"deno.enablePaths\":[\"./build.ts\",\"./examples/server.ts\"]}' > .vscode/settings.json",
    "prepublishOnly": "deno run -A build.ts",
    "fmt": "dprint fmt",
    "dev": "deno run -A examples/server.ts"
  },
  "files": [
    "dist/",
    "types/"
  ],
  "browser": {
    "process": false,
    "buffer": false
  },
  "sideEffects": false,
  "devDependencies": {
    "@shikijs/core": "1.2.0",
    "@shikijs/monaco": "1.2.0",
    "esbuild": "0.20.2",
    "monaco-editor-core": "0.47.0",
    "tm-grammars": "1.5.3",
    "tm-themes": "1.3.2",
    "typescript": "5.4.2",
    "vscode-css-languageservice": "6.2.12",
    "vscode-html-languageservice": "5.1.2",
    "vscode-json-languageservice": "5.3.9",
    "vscode-languageserver-types": "3.17.5"
  },
  "peerDependencies": {
    "typescript": ">= 5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/esm-dev/esm.sh.git"
  },
  "license": "MIT"
}
